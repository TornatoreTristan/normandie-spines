---
import { getPostsByCategoryNames } from "../lib/api";
const props = Astro.props;

let categories = [];

props.category.nodes.map((categorie) => {
  categories.push(categorie.name);
});

const allPosts = await getPostsByCategoryNames(categories);
const posts = allPosts.data.posts.nodes.filter(
  (post) => post.uri !== props.slug
);
---

<section>
  <h2>Vous aimerez aussi ces articles</h2>
  <div class="list-other-posts">
    {
      posts.map((post) => {
        return (
          <article class="other-post__item">
            <a href={post.uri}>
              <img
                class="featured-img"
                src={post.featuredImage?.node.sourceUrl}
                width="400"
                alt=""
              />
            </a>
            <div class="post-details">
              <div class="post-details__date">
                <time datetime={post.date}>
                  {new Date(post.date).toLocaleDateString("fr-FR")}
                </time>
              </div>
              <div class="post-details__author">
                <img src={post.author?.node?.avatar?.url} width="20" alt="" />
                {post.author?.node?.name}
              </div>
            </div>
            <a href={post.uri}>
              <h3>{post.title}</h3>
            </a>
          </article>
        );
      })
    }
  </div>
</section>

<style>
  .list-other-posts {
    display: flex;
    flex-wrap: wrap;
  }

  .other-post__item {
    width: 30%;
    margin-bottom: 2rem;
    padding: 1rem;
  }
  .other-post__item a {
    text-decoration: none;
    color: inherit;
  }
  .other-post__item .featured-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 0.75rem;
  }
  .post-details__author {
  }
  .post-details {
    color: darkgrey;
    display: flex;
    align-items: center;
    font-size: 0.8rem;
    font-weight: 100;
    gap: 10px;
  }
  .post-details__date {
    border-right: 1px solid darkgrey;
    padding-right: 10px;
  }
  .post-details__author {
    display: flex;
    align-items: center;
  }
  .post-details__author img {
    border-radius: 50%;
  }
</style>
